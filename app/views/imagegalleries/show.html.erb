<p id="notice"><%= notice %></p>
<div class="conatiner ">
    <div class="row justify-content-center ">
    <div class="d-flex flex-column mt-2 border border-secondary p-4 bg-light">

          <p>
            <strong>Title:</strong>
            <%= @imagegallery.title %>
          </p>

         

          <div style="width:400px ; height:auto">
              <%= image_tag(@imagegallery.image ,style: 'width:100% ') %>
          </div>

          <p class="my-3">
            <strong>Caption:</strong>
            <%= @imagegallery.caption %>
          </p>
         

          <p class="d-flex justify-content-around">
            <%= link_to 'Edit', edit_imagegallery_path(@imagegallery) %>           

              <% if current_user && current_user.admin %> 
                        <%= link_to 'Back', showallimages_path, :class => 'btn btn-dark' %>
                      <% else %>
                            <%= link_to 'Back', imagegalleries_path, :class => 'btn btn-dark' %> 
             <% end %>


          </p>
</div>
</div>
</div>